@{
    ViewData["Title"] = "Contact Us";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/Rec.css">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Jordanian Passport Office</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/PassportRenewal">Passport Applications</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/ResidencyForForeigners">Residency For Foreigners</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Services
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="/Home/Fees">Fees</a></li>
                            <li><a class="dropdown-item" href="/Home/Guidelines">Guidelines</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="/Home/Contact">Contact Us</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Header -->
    <header class="container text-center my-5">
        <h2 class="page-title">Contact Us</h2>
    </header>

    <!-- Main Content -->
    <main class="container">
        <section>
            <h3 class="mb-4">Get In Touch</h3>
            <p>If you have any questions or need assistance, feel free to reach out to us. We are here to help!</p>

            <!-- Contact Form -->
            <form action="/Home/ThankYou" method="POST">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="name" class="form-label">Full Name</label>
                        <input type="text" class="form-control" id="name" name="name" required>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="email" class="form-label">Email Address</label>
                        <input type="email" class="form-control" id="email" name="email" required>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="message" class="form-label">Your Message</label>
                    <textarea class="form-control" id="message" name="message" rows="5" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Send Message</button>
            </form>
        </section>

        <section class="mt-5">
            <h3 class="mb-4">Our Office</h3>
            <p>
                Jordanian Passport Office <br />
                King Hussein Street, <br />
                Amman, Jordan <br />
                Phone: +962 6 123 4567 <br />
                Email: info@jordanpassport.gov.jo
            </p>
        </section>
    </main>
    <br>
    <br />
    <br>
    <br />
    <br>
    <br />
    <br>
    <br />
    <br>
    <br />
    <br>
    <br />
    <!-- Footer -->
    <footer class="bg-dark text-light py-4 mt-auto">
        <div class="container text-center">
            <div class="row">
                <div class="col-md-6">
                    <h5>Contact Us</h5>
                    <p>
                        Jordanian Passport Office <br />
                        King Hussein Street, <br />
                        Amman, Jordan <br />
                        Phone: +962 6 123 4567 <br />
                        Email: info@jordanpassport.gov.jo
                    </p>
                </div>
                <div class="col-md-6">
                    <h5>Follow Us</h5>
                    <p>
                        <a href="https://facebook.com/jordanpassport" class="text-light">Facebook</a> |
                        <a href="https://twitter.com/jordanpassport" class="text-light">Twitter</a> |
                        <a href="https://instagram.com/jordanpassport" class="text-light">Instagram</a>
                    </p>
                </div>
            </div>
            <p>&copy; 2024 Jordanian Passport Office. All rights reserved.</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

@model PassportApplication

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/Rec.css">
</head>
<body>

    <div class="container mt-5">
        <h2 class="text-center">Submit Passport Renewal Application</h2>

        <form asp-action="CreatePassportApplication" method="post">
            <!-- Full Name -->
            <div class="mb-3">
                <label for="FullName" class="form-label">Full Name</label>
                <input type="text" class="form-control" id="FullName" name="FullName" value="@Model.FullName" required>
                @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })
            </div>

            <!-- Passport Number -->
            <div class="mb-3">
                <label for="PassportNumber" class="form-label">Passport Number</label>
                <input type="text" class="form-control" id="PassportNumber" name="PassportNumber" value="@Model.PassportNumber" required>
                @Html.ValidationMessageFor(model => model.PassportNumber, "", new { @class = "text-danger" })
            </div>

            <!-- Email -->
            <div class="mb-3">
                <label for="Email" class="form-label">Email Address</label>
                <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" required>
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>

            <!-- Date of Birth -->
            <div class="mb-3">
                <label for="DateOfBirth" class="form-label">Date of Birth</label>
                <input type="date" class="form-control" id="DateOfBirth" name="DateOfBirth" required>
                @Html.ValidationMessage("DateOfBirth", "", new { @class = "text-danger" })
            </div>

            <!-- Phone Number -->
            <div class="mb-3">
                <label for="PhoneNumber" class="form-label">Phone Number</label>
                <input type="tel" class="form-control" id="PhoneNumber" name="PhoneNumber" value="@Model.PhoneNumber" required>
                @Html.ValidationMessage("PhoneNumber", "", new { @class = "text-danger" })
            </div>

            <!-- Reason for Renewal -->
            <div class="mb-3">
                <label for="Reason" class="form-label">Reason for Renewal</label>
                <textarea class="form-control" id="Reason" name="Reason" rows="3" required></textarea>
                @Html.ValidationMessage("Reason", "", new { @class = "text-danger" })
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary">Submit Application</button>

            <br /><br />

            <br /><br />
            <br/><br />
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>

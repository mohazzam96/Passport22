@{
    ViewData["Title"] = "Passport Renewal Services";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/Rec.css">
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Jordanian Passport Office</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/PassportRenewal">Passport Renewal</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/ResidencyForForeigners">Residency for Foreigners</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Services
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="/Home/Fees">Fees</a></li>
                            <li><a class="dropdown-item" href="/Home/Guidelines">Guidelines</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="/Home/Contact">Contact Us</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Header -->
    <header class="container text-center my-5">
        <h2 class="page-title">Passport Renewal Services</h2>
    </header>

    <!-- Main Content -->
    <main class="container">
        <section>
            <h3 class="mb-4">Renewal Options</h3>

            <!-- Button to view required documents -->
            <a href="/Home/PassportRequiredDocuments" class="btn btn-primary mb-3">View Required Documents</a>

            <!-- Button to submit passport renewal application -->
            <a href="/Home/CreatePassportApplication" class="btn btn-success">Submit Passport Renewal Application</a>
        </section>
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-light py-4 mt-auto">
        <div class="container text-center">
            <div class="row">
                <div class="col-md-6">
                    <h5>Contact Us</h5>
                    <p>
                        Jordanian Passport Office <br />
                        King Hussein Street, <br />
                        Amman, Jordan <br />
                        Phone: +962 6 123 4567 <br />
                        Email: info@jordanpassport.gov.jo
                    </p>
                </div>
                <div class="col-md-6">
                    <h5>Follow Us</h5>
                    <p>
                        <a href="https://facebook.com/jordanpassport" class="text-light">Facebook</a> |
                        <a href="https://twitter.com/jordanpassport" class="text-light">Twitter</a> |
                        <a href="https://instagram.com/jordanpassport" class="text-light">Instagram</a>
                    </p>
                </div>
            </div>
            <p>&copy; 2024 Jordanian Passport Office. All rights reserved.</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

</html>

@{
    ViewData["Title"] = "Required Documents for Passport Renewal";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/Rec.css">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Passport Office</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/PassportRenewal">Passport Renewal</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/ResidencyForForeigners">Residency For Foreigners</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Header -->
    <header class="container text-center my-5">
        <h2 class="page-title">Required Documents for Passport Renewal</h2>
    </header>

    <!-- Main Content -->
    <main class="container">
        <section>
            <h3 class="mb-4">Please Prepare the Following Documents</h3>
            <ul class="list-group">
                <li class="list-group-item">1. Original Passport</li>
                <li class="list-group-item">2. Copy of National ID</li>
                <li class="list-group-item">3. Passport Renewal Application Form</li>
                <li class="list-group-item">4. Recent Passport-Sized Photos (2)</li>
                <li class="list-group-item">5. Payment Receipt</li>
                <li class="list-group-item">6. Proof of Residency (if applicable)</li>
            </ul>

            <p class="mt-4">Ensure all documents are valid and up-to-date to avoid delays in processing.</p>

            <!-- Button to go back to the passport renewal view -->
            <a href="/Home/CreatePassportApplication" class="btn btn-primary mt-3">Proceed to Passport Renewal</a>
        </section>
    </main>

    <!-- Footer -->
    <footer class="text-center py-3 bg-light mt-5">
        <p>&copy; 2024 Residency and Passport Office. All rights reserved.</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

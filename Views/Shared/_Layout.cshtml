@using Microsoft.AspNetCore.Identity
@using Passport2.Models
@using Passport2.Controllers
@using Microsoft.AspNetCore.Mvc.Rendering
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="ar">
 <!-- Set the language to Arabic -->
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Passport Application</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Amiri:wght@400;700&family=Cairo:wght@300;400;600;700&display=swap" rel="stylesheet"> <!-- Link to Arabic fonts -->
    <link rel="stylesheet" href="~/css/layout.css">
</head>

<body>


    <!-- Arabic Text Display -->
    <div class="arabic-text" style="text-align: center; margin-top: 30px; font-family: 'Amiri', serif; font-size: 1.2rem; color: #C8102E;">
        المملكة الاردنية الهاشمية
    </div>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="bg-light text-center py-3 mt-4">
        <p>&copy; 2024 Passport Application. All rights reserved.</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
